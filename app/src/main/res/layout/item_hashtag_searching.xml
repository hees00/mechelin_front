<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/searching_item_background"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_hashtag_searching_reviewnum_tv"
        />


    <ImageView
        android:id="@+id/item_searching_hashtag_iv"
        android:layout_width="8dp"
        android:layout_height="10dp"
        android:src="@drawable/search_hashtag_icon_gray"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_hashtag_searching_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해시태그이름"
        android:textColor="#766c6c"
        android:textStyle="normal"
        android:textSize="10sp"
        android:fontFamily="@font/scdream4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/item_hashtag_searching_reviewnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 수"
        android:textSize="8sp"
        android:textColor="#d5cece"
        android:fontFamily="@font/scdream3"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/item_hashtag_searching_name_tv"
        app:layout_constraintTop_toBottomOf="@id/item_hashtag_searching_name_tv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>