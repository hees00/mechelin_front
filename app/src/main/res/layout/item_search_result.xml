<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_search_item_storename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식당 이름"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_search_item_storeaddress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 땡땡구 땡땡로 203-39"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_search_item_storename_tv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textColor="#dddddd"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/item_search_item_storeaddress_tv"
        android:background="@color/black"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>