<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/list_category_iv"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:src="@drawable/western_food_chosen_category_and_list_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/list_new_eclipse_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/list_elipse_selector"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_category_iv"
        />

    <TextView
        android:id="@+id/list_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        android:textStyle="normal"
        android:textColor="@drawable/list_text_selector"
        android:textSize="8sp"
        android:fontFamily="@font/scdream4"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/list_new_eclipse_iv"
        app:layout_constraintTop_toTopOf="@id/list_new_eclipse_iv"
        app:layout_constraintBottom_toBottomOf="@id/list_new_eclipse_iv"
        />

    <ImageView
        android:id="@+id/list_starrate_eclipse_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/list_elipse_selector"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/list_new_tv"
        app:layout_constraintTop_toTopOf="@id/list_new_eclipse_iv"
        />

    <TextView
        android:id="@+id/list_starrate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점순"
        android:textStyle="normal"
        android:textColor="@drawable/list_text_selector"
        android:textSize="8sp"
        android:fontFamily="@font/scdream4"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/list_starrate_eclipse_iv"
        app:layout_constraintTop_toTopOf="@id/list_new_eclipse_iv"
        app:layout_constraintBottom_toBottomOf="@id/list_new_eclipse_iv"
        />

    <ImageView
        android:id="@+id/list_delivery_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/list_delivery_selector"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_category_iv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달가능"
        android:textSize="8sp"
        android:textColor="@drawable/list_text_selector"
        android:textStyle="normal"
        android:fontFamily="@font/scdream4"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/list_delivery_iv"
        app:layout_constraintTop_toTopOf="@id/list_delivery_iv"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_new_tv"
       />

</androidx.constraintlayout.widget.ConstraintLayout>