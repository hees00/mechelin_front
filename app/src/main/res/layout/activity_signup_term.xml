<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_term_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="서비스 약관 동의"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#7e7373"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <ImageView
        android:id="@+id/signup_term_check_all_deactivate"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/serviceagree_check_line_xxhdpi"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/signup_term_term_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="모두 동의합니다."
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#7e7373"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@id/signup_term_check_all_deactivate"
        app:layout_constraintBottom_toBottomOf="@+id/signup_term_check_all_deactivate"
        app:layout_constraintStart_toEndOf="@+id/signup_term_check_all_deactivate"/>

    <TextView
        android:id="@+id/signup_term_term_precaution"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:includeFontPadding="false"
        android:text="전체 동의는 필수정보에 대한 동의가 포함되어 있으며, 개별적으로도 동의를 선택하실 수 있습니다."
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#d5cece"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_term_all"
        app:layout_constraintStart_toStartOf="@+id/signup_term_term_all"/>

    <View
        android:id="@+id/signup_term_line"
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#26958383"
        app:layout_constraintStart_toStartOf="@+id/signup_term_term_all"
        app:layout_constraintTop_toBottomOf="@id/signup_term_term_precaution" />

    <ImageView
        android:id="@+id/signup_term_check_1_deactivate"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/serviceagree_check_line_xxhdpi"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_line"
        app:layout_constraintStart_toStartOf="@id/signup_term_check_all_deactivate"/>

    <TextView
        android:id="@+id/signup_term_term_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="[필수] 이용약관 동의"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#7e7373"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@id/signup_term_check_1_deactivate"
        app:layout_constraintBottom_toBottomOf="@+id/signup_term_check_1_deactivate"
        app:layout_constraintStart_toEndOf="@+id/signup_term_check_1_deactivate"/>

    <ImageView
        android:id="@+id/signup_term_chevron_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/topbar_arrow_right_xxhdpi"
        app:layout_constraintEnd_toEndOf="@+id/signup_term_line"
        app:layout_constraintBottom_toBottomOf="@id/signup_term_term_1"
        app:layout_constraintTop_toTopOf="@+id/signup_term_term_1" />

    <ImageView
        android:id="@+id/signup_term_check_2_deactivate"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/serviceagree_check_line_xxhdpi"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_check_1_deactivate"
        app:layout_constraintStart_toStartOf="@id/signup_term_check_all_deactivate"/>

    <TextView
        android:id="@+id/signup_term_term_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="[필수] 개인정보 수집 및 이용 동의"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#7e7373"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@id/signup_term_check_2_deactivate"
        app:layout_constraintBottom_toBottomOf="@+id/signup_term_check_2_deactivate"
        app:layout_constraintStart_toEndOf="@+id/signup_term_check_2_deactivate"/>

    <ImageView
        android:id="@+id/signup_term_chevron_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/topbar_arrow_right_xxhdpi"
        android:layout_marginLeft="115dp"
        app:layout_constraintEnd_toEndOf="@+id/signup_term_line"
        app:layout_constraintBottom_toBottomOf="@id/signup_term_term_2"
        app:layout_constraintTop_toTopOf="@+id/signup_term_term_2"/>

    <Button
        android:id="@+id/signup_term_agree_btn_deactivate"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="@drawable/login_signup_btn_deactivate"
        android:text="동의"
        android:textSize="14sp"
        android:textColor="#958383"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_term_term_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>