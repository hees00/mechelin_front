<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_bnv"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconSize="42px"
        app:itemIconTint="@color/main_color"
        app:itemTextColor="@color/main_color"
        app:menu="@menu/main_bnv_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <ImageView
        android:id="@+id/main_btn_arrow_iv"
        android:layout_width="8.65px"
        android:layout_height="14px"
        android:src="@drawable/main_btn_arrow"
        android:layout_marginTop="49px"
        android:layout_marginStart="19.33px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/main_btn_search_iv"
        android:layout_width="17.49px"
        android:layout_height="17.49px"
        android:src="@drawable/main_btn_search"
        android:layout_marginTop="53px"
        android:layout_marginEnd="59.51px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/main_btn_personal_info_iv"
        android:layout_width="16px"
        android:layout_height="16px"
        android:src="@drawable/main_btn_personal_info"
        android:layout_marginStart="23.51px"
        app:layout_constraintStart_toEndOf="@id/main_btn_search_iv"
        app:layout_constraintTop_toTopOf="@id/main_btn_search_iv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>