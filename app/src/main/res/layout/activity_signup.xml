<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="회원가입"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#7e7373"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/signup_input_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:hint="닉네임"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_title"
        app:layout_constraintStart_toStartOf="@id/signup_line_nickname"/>

    <View
        android:id="@+id/signup_line_nickname"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_input_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/signup_des_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#d5cece"
        android:text="닉네임은 1~6자리의 한글로 설정해 주세요."
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_line_nickname"
        app:layout_constraintStart_toStartOf="@+id/signup_input_nickname"/>

    <EditText
        android:id="@+id/signup_input_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:hint="전화번호 입력"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_des_nickname"
        app:layout_constraintStart_toStartOf="@id/signup_input_nickname"/>

    <View
        android:id="@+id/signup_line_phone"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_input_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/signup_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:hint="이메일 주소 입력"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_line_phone"
        app:layout_constraintStart_toStartOf="@id/signup_input_nickname"/>

    <View
        android:id="@+id/signup_line_email"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/signup_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:hint="비밀번호"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_line_email"
        app:layout_constraintStart_toStartOf="@id/signup_input_nickname"/>

    <View
        android:id="@+id/signup_line_password"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/signup_des_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#d5cece"
        android:text="비밀번호는 6~12자리의 영문, 숫자를 조합하여 설정해 주세요."
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_line_password"
        app:layout_constraintStart_toStartOf="@+id/signup_input_nickname"/>

    <EditText
        android:id="@+id/signup_input_password_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:hint="전화번호 입력"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_des_password"
        app:layout_constraintStart_toStartOf="@id/signup_input_nickname"/>

    <View
        android:id="@+id/signup_line_password_check"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_input_password_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/signup_btn_deactivate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="다음"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#958383"
        android:background="@drawable/login_signup_btn_deactivate"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="218dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_line_password_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>