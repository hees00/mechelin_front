<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_main_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_login_home_xxhdpi"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/login_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="나만의 맛집일기"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#e54b4b"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_main_logo"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/login_main_login_btn_activate"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:text="로그인"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:background="@drawable/login_signup_btn_activate"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/login_main_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/login_main_signup_btn_deactivate"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="@drawable/login_signup_btn_deactivate"
        android:text="회원가입"
        android:textSize="14sp"
        android:textColor="#958383"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/login_main_login_btn_activate"
        app:layout_constraintStart_toStartOf="@+id/login_main_login_btn_activate"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>