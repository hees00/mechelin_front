<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="미슐랭님 환영합니다!"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#7e7373"
        android:layout_marginTop="185dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/welcome_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="회원가입이 완료되었습니다."
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#d5cece"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/welcome_login_btn_activate"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:text="시작하기"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:background="@drawable/login_signup_btn_activate"
        android:layout_marginTop="305dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>