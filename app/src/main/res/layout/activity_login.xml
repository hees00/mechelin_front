<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_login_home"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/login_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="이메일"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/login_logo"
        app:layout_constraintStart_toStartOf="@id/login_line_email"/>

    <View
        android:id="@+id/login_line_email"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/login_input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="비밀번호"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#66958383"
        android:background="@null"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/login_line_email"
        app:layout_constraintStart_toStartOf="@+id/login_input_email"/>

    <View
        android:id="@+id/login_line_password"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#26958383"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/login_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/login_login_btn_deactivate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="로그인"
        android:textSize="14sp"
        android:textColor="#958383"
        android:background="@drawable/login_signup_btn_deactivate"
        android:layout_marginTop="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/login_line_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>